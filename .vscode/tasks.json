{
		"version": "2.0.0",
		"tasks": [
			{
				"label": "remove_prev_bin",
				"type": "shell",
				"command": "start",
				"presentation": {
					"echo": true,
					"reveal": "never",
					"focus": false,
					"panel": "shared",
					"showReuseMessage": false,
					"clear": false
				},
				"args": [
					"/b",
					"cmd",
					"/c",
					"del \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
				]
			},
			{
				"label": "run_bin",
				"type": "shell",
				"command": "start",
				"args": [
					"/b",
					"cmd",
					"/c",
					"\"${fileDirname}/${fileBasenameNoExtension}.exe\""
				],
				"presentation": {
					"echo": true,
					"reveal": "never",
					"focus": false,
					"panel": "shared",
					"showReuseMessage": false,
					"clear": false
				},
			},
			{
				"label": "build",
				"type": "shell",
				"command": "${config:qb64.installPath}/qb64.exe",
				"args": [
					"-x",
					"${fileDirname}\\${fileBasename}",
					"-o",
					"${fileDirname}\\${fileBasenameNoExtension}.exe"
				],
				"linux": {
					"command": "${config:qb64.installPath}/qb64",
					"args": [
						"-x",
						"'${fileDirname}/${fileBasename}'",
						"-o",
						"'${fileDirname}/${fileBasenameNoExtension}'"
					]
				},
				"osx": {
					"command": "${config:qb64.installPath}/qb64",
					"args": [
						"-x",
						"'{fileDirname}/${fileBasename}'",
						"-o",
						"'${fileDirname}/${fileBasenameNoExtension}'"
					]
				},
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"presentation": {
					"reveal": "always",
					"panel": "new"
				}
			},
			{
				"label": "Clean QB64",
				"type": "shell",
				"options": {
					"cwd": "${config:qb64.installPath}/internal",
				},
				"command": "${config:qb64.installPath}/internal/clean.bat",
				"linux": {
					"command":"${config:qb64.installPath}/internal/clean.sh",
				},
				"osx": {
					"command":"${config:qb64.installPath}/internal/clean.sh",
				},
				"group": {
					"kind": "build",
					"isDefault": false
				},
				"presentation": {
					"reveal": "always",
					"panel": "new"
				}
			},
			{
				"label": "Remove .exe files",
				"type": "shell",
				"options": {
					"cwd": "${fileDirname}"
				},
				"command": "bash",
				"args": [
					"-c",
					"find",
					"-name",
					"\"*.exe\"",
					"-exec",
					"echo",
					"{}",
					"\\;"
				]
			}
		]
	}