$INCLUDEONCE

' Initialize the text tool
SUB TEXT_init ()
    TEXT.ACTIVE = FALSE
    TEXT.START_X = 0
    TEXT.START_Y = 0
    TEXT.CURSOR_X = 0
    TEXT.CURSOR_Y = 0
    TEXT.TEXT_SIZE = 1
    TEXT.MAX_LINES = 100
    TEXT.LINE_COUNT = 0
    TEXT.CURSOR_BLINK = 0
    TEXT.BLINK_TIMER = 0
    
    ' Clear text buffer
    DIM i AS INTEGER
    FOR i = 0 TO TEXT.MAX_LINES - 1
        TEXT_BUFFER(i) = ""
    NEXT i
END SUB

' Reset the text tool
SUB TEXT_reset ()
    TEXT_init
END SUB

' Start text entry at a position
SUB TEXT_start (x AS INTEGER, y AS INTEGER)
    ' If already active, apply current text first
    IF TEXT.ACTIVE THEN
        TEXT_apply
    END IF
    
    TEXT.ACTIVE = TRUE
    TEXT.START_X = x
    TEXT.START_Y = y
    TEXT.CURSOR_X = x
    TEXT.CURSOR_Y = y
    TEXT.LINE_COUNT = 1
    TEXT.CURSOR_BLINK = 1
    TEXT.BLINK_TIMER = TIMER
    
    ' Clear text buffer
    DIM i AS INTEGER
    FOR i = 0 TO TEXT.MAX_LINES - 1
        TEXT_BUFFER(i) = ""
    NEXT i
END SUB

' Add a character at current cursor position
SUB TEXT_add_char (ch AS STRING)
    IF NOT TEXT.ACTIVE THEN EXIT SUB
    IF TEXT.LINE_COUNT < 1 THEN TEXT.LINE_COUNT = 1
    
    ' Get current line index (0-based)
    DIM line_idx AS INTEGER
    line_idx = TEXT.LINE_COUNT - 1
    
    ' Add character to current line
    TEXT_BUFFER(line_idx) = TEXT_BUFFER(line_idx) + ch
    
    ' Update cursor position
    TEXT.CURSOR_X = TEXT.CURSOR_X + 8  ' Default font is 8px wide
END SUB

' Handle backspace
SUB TEXT_backspace ()
    IF NOT TEXT.ACTIVE THEN EXIT SUB
    IF TEXT.LINE_COUNT < 1 THEN EXIT SUB
    
    DIM line_idx AS INTEGER
    line_idx = TEXT.LINE_COUNT - 1
    
    DIM line_len AS INTEGER
    line_len = LEN(TEXT_BUFFER(line_idx))
    
    IF line_len > 0 THEN
        ' Remove last character from current line
        TEXT_BUFFER(line_idx) = LEFT$(TEXT_BUFFER(line_idx), line_len - 1)
        TEXT.CURSOR_X = TEXT.CURSOR_X - 8
    ELSEIF TEXT.LINE_COUNT > 1 THEN
        ' Current line is empty, move to previous line
        TEXT.LINE_COUNT = TEXT.LINE_COUNT - 1
        line_idx = TEXT.LINE_COUNT - 1
        TEXT.CURSOR_Y = TEXT.START_Y + (TEXT.LINE_COUNT - 1) * 13 + (TEXT.LINE_COUNT > 1 AND 1 OR 0)  ' Add offset for line 2+
        ' Position cursor at end of previous line
        TEXT.CURSOR_X = TEXT.START_X + LEN(TEXT_BUFFER(line_idx)) * 8
    END IF
END SUB

' Handle newline
SUB TEXT_newline ()
    IF NOT TEXT.ACTIVE THEN EXIT SUB
    IF TEXT.LINE_COUNT >= TEXT.MAX_LINES THEN EXIT SUB
    
    ' Move to next line
    TEXT.LINE_COUNT = TEXT.LINE_COUNT + 1
    TEXT.CURSOR_X = TEXT.START_X  ' Reset to left margin
    TEXT.CURSOR_Y = TEXT.START_Y + (TEXT.LINE_COUNT - 1) * 13 + 1  ' 13px line height + 1px offset
END SUB

' Apply text to canvas
SUB TEXT_apply ()
    IF NOT TEXT.ACTIVE THEN EXIT SUB
    
    ' Save state for undo
    UNDO_save_state
    
    ' Draw each line of text to the painting surface
    _DEST SCRN.PAINTING&
    DIM i AS INTEGER
    DIM y_pos AS INTEGER
    
    FOR i = 0 TO TEXT.LINE_COUNT - 1
        IF LEN(TEXT_BUFFER(i)) > 0 THEN
            y_pos = TEXT.START_Y + i * 13
            IF i > 0 THEN y_pos = y_pos + 1  ' Add 1px offset for lines after first
            COLOR PAINT_COLOR~&
            _PRINTSTRING (TEXT.START_X, y_pos), TEXT_BUFFER(i)
        END IF
    NEXT i
    
    ' Reset text tool
    TEXT_reset
END SUB

' Cancel text entry
SUB TEXT_cancel ()
    TEXT_reset
END SUB

' Render text preview on GUI
SUB TEXT_render_preview (dest AS LONG)
    IF NOT TEXT.ACTIVE THEN EXIT SUB
    
    _DEST dest
    
    ' Draw each line of text
    DIM i AS INTEGER
    DIM y_pos AS INTEGER
    
    FOR i = 0 TO TEXT.LINE_COUNT - 1
        IF LEN(TEXT_BUFFER(i)) > 0 THEN
            y_pos = TEXT.START_Y + i * 13
            IF i > 0 THEN y_pos = y_pos + 1  ' Add 1px offset for lines after first
            COLOR PAINT_COLOR~&
            _PRINTSTRING (TEXT.START_X, y_pos), TEXT_BUFFER(i)
        END IF
    NEXT i
    
    ' Draw I-beam origin marker (vertical line)
    DIM marker_height AS INTEGER
    marker_height = 13  ' Match line height
    LINE (TEXT.START_X, TEXT.START_Y)-(TEXT.START_X, TEXT.START_Y + marker_height), _RGB32(128, 128, 128)
    
    ' Draw blinking cursor at current position
    TEXT_update_cursor
    IF TEXT.CURSOR_BLINK THEN
        LINE (TEXT.CURSOR_X, TEXT.CURSOR_Y)-(TEXT.CURSOR_X, TEXT.CURSOR_Y + marker_height), PAINT_COLOR~&
    END IF
END SUB

' Update cursor blink state
SUB TEXT_update_cursor ()
    IF NOT TEXT.ACTIVE THEN EXIT SUB
    
    ' Toggle cursor every 0.5 seconds
    IF TIMER - TEXT.BLINK_TIMER > 0.5 THEN
        TEXT.CURSOR_BLINK = 1 - TEXT.CURSOR_BLINK
        TEXT.BLINK_TIMER = TIMER
    END IF
END SUB
